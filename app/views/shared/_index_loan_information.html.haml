        %td.manual-input
          %input.input-medium{"placeholder" => "Please enter a value",
            "ng-model" => "loan.borrower_paid_percent",
            "ng-focus" => "storeOrigValue('Borrower Paid Percent', loan.borrower_paid_percent)",
            "ng-blur" => "saveManualEntry('Borrower Paid Percent', loan.borrower_paid_percent)"}
          %span.small-orange-spinner{"ng-show" => "saving['Borrower Paid Percent']"}
          .error-area{"ng-show" => "error_saving['Borrower Paid Percent']"}
            {{ error_saving['Borrower Paid Percent'] }}
      %tr
        %th Borrower Paid Amount
        %td.manual-input
          %input.input-medium{"placeholder" => "Please enter a value",
            "ng-model" => "loan.borrower_paid_amount",
            "ng-focus" => "storeOrigValue('Borrower Paid Amount', loan.borrower_paid_amount)",
            "ng-blur" => "saveManualEntry('Borrower Paid Amount', loan.borrower_paid_amount)"}
          %span.small-orange-spinner{"ng-show" => "saving['Borrower Paid Amount']"}
          .error-area{"ng-show" => "error_saving['Borrower Paid Amount']"}
            {{ error_saving['Borrower Paid Amount'] }}
      %tr
        %th Earnest Money Amount
        %td.manual-input
          %input.input-medium{"placeholder" => "Please enter a value",
            "ng-model" => "loan.earnest_money_amount",
            "ng-focus" => "storeOrigValue('Earnest Money Amount', loan.earnest_money_amount)",
            "ng-blur" => "saveManualEntry('Earnest Money Amount', loan.earnest_money_amount)"}
          %span.small-orange-spinner{"ng-show" => "saving['Earnest Money Amount']"}
          .error-area{"ng-show" => "error_saving['Earnest Money Amount']"}
            {{ error_saving['Earnest Money Amount'] }}
      %tr{"ng-if" => "loan.purpose_type == 'Refinance'"}
        %th Payoff Amount
        %td.manual-input
          %input.input-medium{"placeholder" => "Please enter a value",
            "maxlength" => "25",
            "ng-model" => "loan.payoff_amount",
            "ng-focus" => "storeOrigValue('Payoff Amount', loan.payoff_amount)",
            "ng-blur" => "saveManualEntry('Payoff Amount', loan.payoff_amount)"}
          %span.small-orange-spinner{"ng-show" => "saving['Payoff Amount']"}
          .error-area{"ng-show" => "error_saving['Payoff Amount']"}
            {{ error_saving['Payoff Amount'] }}
      %tr{"ng-if" => "loan.purpose_type != 'Refinance'"}
        %th Payoff Amount
        %td Not Applicable, This Is Not A Refinance



  .span3{style: 'width:320px;'}
    %table.table.table-bordered
      %tr
        %th Property Type
        %td {{ loan.gse_property_type }}
      %tr
        %th VA Funding Fee Amount
        %td {{ loan.va_fee_amount }}
      %tr
        %th VA Funding Fee Percent
        %td {{ loan.va_fee_percent }}
      %tr
        %th Funds Requested Date
        %td {{ loan.funds_requested_date }}
      %tr
        %th Flood Zone
        %td {{ loan.flood_zone }}

.lead Closing Cash To / From Borrower
.row
  .span12
    %table.table.table-bordered
      %tr
        %th Cash to Close
        %td.manual-input.span10
          %input.input-medium{"placeholder" => "Please enter a value",
            "maxlength" => "25",
            "ng-model" => "loan.cash_to_close",
            "ng-focus" => "storeOrigValue('Cash To Close', loan.cash_to_close)",
            "ng-blur" => "cashToClose(loan.cash_to_close, loan.total_funds_required_to_close)"}
          %span.small-orange-spinner{"ng-show" => "loading_cash_to_close"}
          .error-area{"ng-show" => "error_saving_cash_to_close"}
            {{ error_saving_cash_to_close }}
      %tr
        %th Seller Credit Amount
        %td.manual-input.span10
          %input.input-medium{"placeholder" => "Please enter a value",
            "maxlength" => "25",
            "ng-model" => "loan.seller_credit_amount",
            "ng-focus" => "storeOrigValue('Seller Credit Amount', loan.seller_credit_amount)",
            "ng-blur" => "saveManualEntry('Seller Credit Amount', loan.seller_credit_amount)"}
          %span.small-orange-spinner{"ng-show" => "saving['Seller Credit Amount']"}
          .error-area{"ng-show" => "error_saving['Seller Credit Amount']"}
            {{ error_saving['Seller Credit Amount'] }}

