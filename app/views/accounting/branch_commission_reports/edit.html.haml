.row
  .span12
    .lead 
      Edit Profile for Loan Officer
      = link_to @datamart_user_profile.branch_employee.name, core_originator_path(@datamart_user_profile.branch_employee) 
      of Branch 
      = link_to "#{@datamart_user_profile.branch.branch_name} :: #{@datamart_user_profile.branch.institution_number}", core_institution_path(@datamart_user_profile.branch)

    = form_for @datamart_user_profile, url: accounting_datamart_user_profile_path(@datamart_user_profile), html: { class: 'form-horizontal' } do |f|

      = render 'accounting/datamart_user_profiles/form', f: f

      .form-actions
        = f.submit 'Save Changes', :class => 'btn btn-primary'
        = link_to t('.cancel', :default => t("helpers.links.cancel")),
            core_originator_path(@datamart_user_profile.datamart_user_id), :class => 'btn'
